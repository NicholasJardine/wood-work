<h1>Are the following details for your order correct?</h1>
<p>If so, cick continue. if not, please update them by clicking the "Change details" button below</p>
<div>
  <h2>Customer Details</h2>
  <div>
    <ul>
      <li> Name:<%= @client.name %></li>
      <li> surname:<%= @client.surname %></li>
      <li> Shipping address:<%= @client.address %></li>
      <li> Postal Code:<%= @client.postal_code %></li>
    </ul>
  </div>
<h2> Items in cart </h2>
  <div>
    <% if @order_items.size > 0 %>
    <% @order_items.each do |item| %>
    <div class="well">
      <div class="row">
        <div class="col-sm-8">

          <div class="card-product">
            <img src= "<%= asset_path item.product.pic %>" />
            <div class="card-product-infos">
            </div>
            <h3><%= item.product.title %></h3>
            <h3><%= item.product.price %></h3>
          </div>
        </div>
      </div>
    </div>
    <% end %>
  </div>
<% end %>
      <div class="form-group">
      <%= form_for (@buyer) do |f| %>

          <%= f.hidden_field :name, value: @client.name %>
          <%= f.hidden_field :surname, value: @client.surname %>

          <%= f.hidden_field :address, value: @client.address %>

          <%= f.hidden_field :postal_code, value: @client.postal_code %>

      </div>
      <div class="btn-group">
        <%= f.submit "continue", class: "btn btn-success" %>
      </div>
      <% end %>

<%= link_to "Continue", "#", class: "btn btn-success" %>
<%= link_to "Change Details", "#", class: "btn btn-danger" %>

</div>

