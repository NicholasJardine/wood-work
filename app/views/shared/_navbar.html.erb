<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">

    <div class="logo" style="color:white; background: rgb(2,0,36); background-image:linear-gradient(0deg, rgba(2,0,36,1) 0%, rgba(0,0,0,1) 2%, rgba(0,0,0,0) 50%), url(<%= asset_path 'bulb.jpg' %>); border-radius:50%; height:50px; background-size:cover; background-position: center; padding:24px;">
    </div>

  <%= link_to "Home", pages_home_path, class:"btn btn-ghost" %>

  <%= link_to "Products", categories_path, class:"btn btn-ghost" %>
  <%= link_to "About", pages_about_path, class:"btn btn-ghost" %>
  <%= link_to "Contact", pages_contact_path, class:"btn btn-ghost" %>
  <%= link_to carts_path(@cart) do %>
  <div style="justify-content: space-between;">
  <i class="fas fa-shopping-cart" style="font-size: 20px;"></i>
  <p>View Cart</p>
  </div>
  <% end %>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>


  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <% if user_signed_in? %>
        <li class="nav-item active">
          <%= link_to "Home", "#", class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to "Messages", "#", class: "nav-link" %>
        </li>
        <li class="nav-item dropdown">
          <%= image_tag "https://kitt.lewagon.com/placeholder/users/ssaunier", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <%= link_to "Action", "#", class: "dropdown-item" %>
            <%= link_to "Another action", "#", class: "dropdown-item" %>
            <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
          </div>
        </li>
      <% else %>
        <li class="nav-item">
          <%= link_to "Login", new_user_session_path, class: "nav-link" %>
        </li>
      <% end %>
    </ul>
  </div>
</div>
