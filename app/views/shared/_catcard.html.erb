<%= link_to category_path(category) do %>
  <div class="card-trip">
    <div class="card-image" style="background: rgb(2,0,36); background-image:linear-gradient(0deg, rgba(2,0,36,1) 0%, rgba(0,0,0,1) 2%, rgba(0,0,0,0) 50%), url(<%= asset_path category.pic %>); border-radius:10px; height:200px; background-size:cover; background-position: center;">
    </div>
      <div class="card-trip-infos">
      <div>
      <h2><%= category.title %></h2>
      </div>
    </div>
  </div>
<% end %>
