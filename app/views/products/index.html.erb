<div class="container d-flex justify-content-center" >

    <div class="lobbies" id="lobby">
      <% @products.each do |product| %>
<%= link_to category_products_path(product) do %>
  <div class="card-trip">
    <div class="card-image" style="background: rgb(2,0,36); background-image:linear-gradient(0deg, rgba(2,0,36,1) 0%, rgba(0,0,0,1) 2%, rgba(0,0,0,0) 50%), url(<%= asset_path product.image %>); border-radius:10px; height:200px; background-size:cover; background-position: center; padding:24px;">
    </div>
      <div class="card-trip-infos">
      <div>
      <h2><%= product.title %></h2>
      </div>
    </div>
  </div>
<% end %>
 <% end %>
    </div>

</div>
<% if @category.main == 'art' %>
  <div>
  <%= link_to 'Go Back', categories_art_path, class: "btn btn-gradient" %>
  </div>
<% elsif @category.main == 'home' %>
  <div>
  <%= link_to 'Go Back', categories_home_path, class: "btn btn-gradient" %>
  </div>
<% else %>
  <div>
  <%= link_to 'Go Back', categories_garden_path, class: "btn btn-gradient" %>
  </div>
<% end %>
