<h1>Are the following details for your order correct?</h1>
<div>
  <h2>Customer Details</h2>
  <div>
    <ul>
      <li> Name:<%= @client.name %></li>
      <li> surname:<%= @client.surname %></li>
      <li> Shipping address:<%= @client.address %></li>
      <li> Postal Code:<%= @client.postal_code %></li>
    </ul>
  </div>
<h2> Items in cart </h2>
  <div>
    <% if @order_items.size > 0 %>
    <% @order_items.each do |item| %>
    <div class="well">
      <div class="row">
        <div class="col-sm-8">

          <div class="card-product">
            <img src= "<%= asset_path item.product.pic %>" />
            <div class="card-product-infos">
            </div>
            <h3><%= item.product.title %></h3>
          </div>
        </div>
      </div>
    </div>
    <% end %>
  </div>
<% end %>

</div>

<h2>If not please click the button below to update</h2>
<div>

<%= link_to "Change Details", "#", class: "btn btn-success" %>

</div>

