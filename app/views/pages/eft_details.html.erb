<h4> Almost done! Just a few more steps. Fill in the order form below</h4>

      <div class="form-group">
      <%= form_for (@customer) do |f| %>
          <%= f.hidden_field :order_id , value: @order.id %>


          <%= f.text_field :full_name, placeholder: "full name"%>

          <%= f.text_field :email, input_html: { autocomplete: 'email' }, placeholder: 'email address'%>

          <%= f.text_field :cell, placeholder: 'cellphone number'%>

          <%= f.text_field :shipping_address, placeholder: 'full address for shipping' %>

      </div>
      <div class="btn-group">
        <%= f.submit "submit details", class: "btn btn-primary" %>
      </div>
      <% end %>
