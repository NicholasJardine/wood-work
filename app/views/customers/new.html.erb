<h4> Almost done! Just a few more steps. Fill in the order form below</h4>

      <div class="form-group">
      <%= form_for @customer do |f| %>
          <%= f.text_field :full_name %>

          <%= f.text_field :email, input_html: { autocomplete: 'email' } %>

          <%= f.number_field :cell%>

          <%= f.text_field :shipping_address %>

      </div>
      <div class="btn-group">
        <%= f.submit "submit details", class: "btn btn-primary" %>
      </div>
      <% end %>
